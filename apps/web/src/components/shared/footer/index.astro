---
import DiscordIcon from '@web/assets/svgs/discord.inline.svg';
import GithubIcon from '@web/assets/svgs/github.inline.svg';
import TwitterIcon from '@web/assets/svgs/twitter.inline.svg';
import LinkedInIcon from '@web/assets/svgs/linkedin.inline.svg';
import YoutubeIcon from '@web/assets/svgs/youtube.inline.svg';

const registration = () => {
	return process.env.NEXT_PUBLIC_DEFAULT_SITE_URL?.includes('bytebase.cc')
		? '沪ICP备2024059253号'
		: '';
};

import MENU from './menus.ts';
---

<footer class="safe-paddings container relative z-10 shrink-0 pt-20 lg:pt-14 md:pt-12 xs:pt-10">
	<div class="grid grid-cols-10 gap-x-10 xl:gap-x-9 lg:gap-x-6 md:gap-x-7 sm:grid sm:grid-cols-4 sm:gap-x-4 sm:gap-y-14">
		{MENU.map(({ name, items }, idx) => (
			<div class="col-span-2" key={idx}>
				<h3 class="text-14 font-bold leading-none tracking-wider text-gray-60">{name}</h3>
				<ul class="mt-7 flex flex-col gap-[18px]">
					{items.map(({ name: childName, linkUrl }, childIdx) => (
						<li class="leading-none" key={childIdx}>
							<Link
								class="group flex items-center font-medium !leading-snug tracking-tight md:-mt-1 sm:mt-0"
								size="md"
								theme="gray"
								href={linkUrl}
							>
								<span>{childName}</span>
							</Link>
						</li>
					))}
				</ul>
			</div>
		))}
	</div>
	<div class="mt-[76px] grid grid-cols-12 gap-x-4 border-t-4 border-tones-purple-light py-6 lg:mt-[58px] lg:gap-x-6 md:mt-11 md:grid-rows-2 md:gap-x-5 md:gap-y-6 md:py-5 xs:mt-[34px] xs:grid-rows-4 xs:gap-x-0">
		<div class="col-span-4 flex items-center gap-x-4 xl:col-span-5 lg:col-span-6 md:row-span-2 md:flex-col md:items-start md:justify-center md:gap-x-0 md:gap-y-6 xs:col-span-full xs:row-span-1">
			<Link class="shrink-0" href="/">
				<span class="sr-only">Bytebase Logo</span>
				{/* eslint-disable-next-line @next/next/no-img-element */}
				<img
					class="h-8 w-[150px] xl:h-7 xl:w-[132px]"
					src="/images/logo.svg"
					alt="Bytebase logo"
					width={150}
					height={32}
					loading="lazy"
				/>
			</Link>
		</div>
		<div class="col-span-2 col-start-7 flex items-center gap-x-4 lg:justify-self-end md:col-span-3 md:col-start-10 md:row-span-1 md:row-start-1 xs:col-span-full xs:col-start-1 xs:row-start-2 xs:-mt-1 xs:justify-self-start">
			{socialLinks.map(({ name, href, icon: Icon }, idx) => (
				<Link
					class="flex items-center justify-center rounded-full"
					key={idx}
					href={href}
					rel="noopener noreferrer"
					target="_blank"
				>
					<span class="sr-only">{name}</span>
					<Icon
						width={24}
						height={24}
						class="shrink-0 transition-opacity duration-200 hover:opacity-80"
					/>
				</Link>
			))}
		</div>
		<div class="col-span-1 col-start-12 flex flex-row items-center justify-end gap-x-4 lg:gap-x-6 md:col-span-3 md:col-start-10 md:row-start-2 md:justify-self-end xs:col-start-1 xs:row-start-3 xs:justify-self-start">
			<p class="whitespace-nowrap text-14 font-medium leading-none tracking-tight text-gray-60 xs:hidden">
				© {new Date().getFullYear()} Bytebase. All Rights Reserved. {registration()}
			</p>
		</div>
		<p class="hidden whitespace-nowrap text-14 font-medium leading-none tracking-tight text-gray-60 xs:col-span-full xs:row-span-1 xs:row-start-4 xs:block">
			© {new Date().getFullYear()} Bytebase. All Rights Reserved. {registration()}
		</p>
	</div>
</footer>
